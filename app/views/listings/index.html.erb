<p id="notice"><%= notice %></p>

<div style='float: right;'>
  <%= link_to "Bought Items", orders_bought_path, class:"btn btn-success btn-md" %>
  <%= link_to "Sold Items", orders_sold_path, class:"btn btn-success btn-md" %>
</div>  

<h1>Listings</h1>


<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
      <div class="card-body">
          <h5 class="card-title"><%= listing.name %></h5>
          <p class="card-text" listing-description><%= listing.description %></p>
          <%= link_to 'Show More', listing, class:"btn btn-outline-success" %>
          </p>
      </div>
      </div>
    </div>    
  <% end %> 
</div>


