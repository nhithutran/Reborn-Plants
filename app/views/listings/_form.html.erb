
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :condition, as: :check_box, collection: Listing::CONDITION, wrapper: :vertical_collection_inline %>
    <%= f.input :size, as: :check_box, collection: Listing::SIZE, wrapper: :vertical_collection_inline %>
    <%= f.input :price %>
    <%= f.association :category %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
